{
  "name": "Node.js Workspace",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      // The following extensions are auto-installed by the devcontainer.
      // Whereas in extensions.json, they are merely recommendedations for the user to install.
      "extensions": [
        // "dbaeumer.vscode-eslint", // Automatically provided by Microsoft's base image
        "esbenp.prettier-vscode",
        "github.vscode-github-actions"
      ]
    }
  }
}
